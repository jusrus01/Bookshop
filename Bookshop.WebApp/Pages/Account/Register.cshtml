@page
@model Bookshop.WebApp.Pages.Account.RegisterModel
@{
}

<h1>Register</h1>
<h2>Create a new account</h2>

<form method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="@Model.RegisterInput.Email"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="@Model.RegisterInput.Email" class="form-control" />
                    </div>
                    <span asp-validation-for="@Model.RegisterInput.Email" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-2">
                        <label asp-for="@Model.RegisterInput.Password"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="@Model.RegisterInput.Password" class="form-control" />
                    </div>
                    <span asp-validation-for="@Model.RegisterInput.Password" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-primary mt-4" type="submit">Register</button>
</form>