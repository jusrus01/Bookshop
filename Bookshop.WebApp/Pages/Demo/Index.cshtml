@page
@model Bookshop.WebApp.Pages.Demo.IndexModel
@{
}

<form method="post">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="@Model.CreateInput.Name"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="@Model.CreateInput.Name" class="form-control" />
                    </div>
