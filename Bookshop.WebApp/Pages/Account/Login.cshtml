@page
@model Bookshop.WebApp.Pages.Account.LoginModel
@{
}

@section Styles
{
    <link href="@Url.Content("~/css/account.css")" rel="stylesheet" type="text/css" />
}

<div class="text-center">
    <form class="form-signin" method="post">
        <span class="book-logo">📚</span>
            
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        
        <span asp-validation-for="@Model.LoginInput.Email" class="text-danger"></span>
        <input type="email" asp-for="@Model.LoginInput.Email" class="form-control" placeholder="Email address" required autofocus>

        <input type="password" asp-for="@Model.LoginInput.Password" class="form-control" placeholder="Password" required>
        <span asp-validation-for="@Model.LoginInput.Password" class="text-danger"></span>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <div class="dont-have-an-account-container">
            <span>Don't have an account? <a asp-area="" asp-page="/Account/Register">Register Here</a></span>
        </div>
    </form>
</div>