@page
@using Bookshop.BusinessLogic.Extensions
@model Bookshop.WebApp.Pages.Book.EditModel
@{
}

@section Styles
    {
    <link href="@Url.Content("~/css/book.css")" rel="stylesheet" type="text/css" />
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <form class="form-register" method="post">
            <h3 style="text-align: center">Edit book</h3>

            <input type="hidden" asp-for="@Model.Book.Id"/>
            <label>ISBN</label>
            <input type="text" asp-for="@Model.Book.ISBN" class="form-control" placeholder="ISBN" required>

            <label>Title</label>
            <input type="text" asp-for="@Model.Book.Title" class="form-control" placeholder="Title" required>

            <label>Author</label>
            <input type="text" asp-for="@Model.Book.Author" class="form-control" placeholder="Author" required>

            <label>Supplier</label>
            <div>
                <select asp-for="@Model.Book.Supplier" placeholder="Supplier" class="form-control">
                    @foreach (SelectListItem option in @Model.Suppliers)
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                </select>
            </div>


            <label>Year</label>
            <input type="text" asp-for="@Model.Book.Year" class="form-control" placeholder="Year" required>

            <label>Pages</label>
            <input type="text" asp-for="@Model.Book.Pages" class="form-control" placeholder="Pages" required>

            <label>Description</label>
            <input type="text" asp-for="@Model.Book.Description" class="form-control" placeholder="Description" required>

            <label>Price</label>
            <input type="text" asp-for="@Model.Book.Price" class="form-control" placeholder="Price" required>

            <label>Discount (0.00 - 1)</label>
            <input type="text" asp-for="@Model.Book.Discount" class="form-control" placeholder="Discount" required>

            <label>Genre</label>
            <div>
                <select asp-for="@Model.Book.Genre" placeholder="Genre" class="form-control">
                    @foreach (SelectListItem option in @Model.Genres)
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                </select>
            </div>

            <div class="d-flex justify-content-center">
                <button class="btn btn-primary" type="submit">Save</button>
                <a class="btn btn-secondary" asp-area="" asp-page="/Book/List">Cancel</a>
            </div>



        </form>

    </div>

</div>