@page
@using Bookshop.Contracts.Constants
@using Bookshop.BusinessLogic.Extensions
@model Bookshop.WebApp.Pages.Client.ProfileModel
@{
}

@section Styles 
{
    <link href="@Url.Content("~/css/account.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/client.css")" rel="stylesheet" type="text/css" />
}

<div class="row justify-content-center">
    <div class="col-md-4 text-center">
        <div class="text-start my-2">
            <span>Roles:</span>
            @foreach (var role in Model.ClientOutput.Roles)
            {
                <span class="role-indicator">@role</span>
            }
        </div>
        <img class="profile-image" src="https://militaryhealthinstitute.org/wp-content/uploads/sites/37/2021/08/blank-profile-picture-png.png" />
        <div class="text-center">
            <div class="mt-4">
                @if (User.IsAdminOrOwner(Model.ClientOutput.Id))
                {
                    <a class="btn btn-primary" asp-area="" asp-page="/Client/Edit">Edit profile</a>
                }

                @if (User.IsInRole(BookshopRoles.Administrator))
                {
                    <button class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">Remove</button>

                    <!-- Modal -->
                    <div class="modal fade" id="removeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Remove</h5>
                                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                                    </button>
                                </div>
                                <div class="modal-body text-start">
                                    <p>Are you sure you want to remove this client?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" onclick="close()">Remove</button>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="close()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="mt-2">
                @if (User.IsAdminOrOwner(Model.ClientOutput.Id))
                {
                    <button class="btn btn-secondary">View order history</button>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">       
        <label asp-for="@Model.ClientOutput.FirstName"></label>
        <p>@Model.ClientOutput.FirstName</p>

        <label asp-for="@Model.ClientOutput.LastName"></label>
        <p>@Model.ClientOutput.LastName</p>

        <label asp-for="@Model.ClientOutput.Email"></label>
        <p>@Model.ClientOutput.Email</p>

        <label asp-for="@Model.ClientOutput.Address"></label>
        <p>@Model.ClientOutput.Address</p>

        <label asp-for="@Model.ClientOutput.PhoneNumber"></label>
        <p>@Model.ClientOutput.PhoneNumber</p>
            
        <label asp-for="@Model.ClientOutput.Created"></label>
        <p>@Model.ClientOutput.Created</p>

        <label asp-for="@Model.ClientOutput.LastLogin"></label>
        <p>@Model.ClientOutput.LastLogin</p>
    </div>
</div>

@section Scripts
{
    <script>
        $('button[data-toggle="modal"]').click(function (event) {
            $('#removeModal').modal('show');
        });
    </script>
}