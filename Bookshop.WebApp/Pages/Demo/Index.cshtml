                </div>
                <div class="row mt-3">
                    <div class="col-sm-2">
                        <label asp-for="@Model.CreateInput.Value"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="@Model.CreateInput.Value" class="form-control" />
                    </div>
                    <span asp-validation-for="@Model.CreateInput.Value" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <button class="btn btn-primary mt-4" type="submit">Create stuff</button>
    <p>Check database after clicking...</p>
